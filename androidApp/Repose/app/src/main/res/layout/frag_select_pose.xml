<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SelectPoseFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="자세2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/SelectBtn_pose2"
                app:layout_constraintStart_toStartOf="@+id/SelectBtn_pose2"
                app:layout_constraintTop_toBottomOf="@+id/SelectBtn_pose2" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="자세3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/SelectBtn_pose3"
                app:layout_constraintStart_toStartOf="@+id/SelectBtn_pose3"
                app:layout_constraintTop_toBottomOf="@+id/SelectBtn_pose3" />

            <ImageButton
                android:id="@+id/SelectBtn_pose2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/pose2_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/SelectBtn_pose1"
                app:layout_constraintTop_toTopOf="@+id/SelectBtn_pose1" />

            <ImageButton
                android:id="@+id/SelectBtn_pose1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/pose1_off"
                app:layout_constraintEnd_toStartOf="@+id/SelectBtn_pose2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <ImageButton
                android:id="@+id/SelectBtn_pose3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/pose3_off"
                app:layout_constraintEnd_toEndOf="@+id/SelectBtn_pose1"
                app:layout_constraintStart_toStartOf="@+id/SelectBtn_pose1"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="당신의 잘못된 자세를 골라주세요"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="자세1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/SelectBtn_pose1"
                app:layout_constraintStart_toStartOf="@+id/SelectBtn_pose1"
                app:layout_constraintTop_toBottomOf="@+id/SelectBtn_pose1" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/alarm"
                app:layout_constraintEnd_toEndOf="@+id/SelectBtn_pose2"
                app:layout_constraintStart_toStartOf="@+id/SelectBtn_pose2"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="자세4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/imageButton6"
                app:layout_constraintStart_toStartOf="@+id/imageButton6"
                app:layout_constraintTop_toBottomOf="@+id/imageButton6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>