<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SelectTimerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SelectTimerFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/btn_monday"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="#636363"
                android:text="월"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toStartOf="@+id/btn_tuesday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <Button
                android:id="@+id/btn_tuesday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FF636363"
                android:text="화"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="@+id/btn_monday"
                app:layout_constraintEnd_toStartOf="@+id/btn_wednesday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_monday"
                app:layout_constraintTop_toTopOf="@+id/btn_monday" />

            <Button
                android:id="@+id/btn_wednesday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FF636363"
                android:text="수"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="@+id/btn_monday"
                app:layout_constraintEnd_toStartOf="@+id/btn_thursday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_tuesday"
                app:layout_constraintTop_toTopOf="@+id/btn_monday" />

            <Button
                android:id="@+id/btn_thursday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FF636363"
                android:text="목"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="@+id/btn_monday"
                app:layout_constraintEnd_toStartOf="@+id/btn_friday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_wednesday"
                app:layout_constraintTop_toTopOf="@+id/btn_monday" />

            <Button
                android:id="@+id/btn_friday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FF636363"
                android:text="금"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="@+id/btn_monday"
                app:layout_constraintEnd_toStartOf="@+id/btn_saturday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_thursday"
                app:layout_constraintTop_toTopOf="@+id/btn_monday" />

            <Button
                android:id="@+id/btn_saturday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FF636363"
                android:text="토"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="@+id/btn_monday"
                app:layout_constraintEnd_toStartOf="@+id/btn_sunday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_friday"
                app:layout_constraintTop_toTopOf="@+id/btn_monday" />

            <Button
                android:id="@+id/btn_sunday"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FF636363"
                android:text="일"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="@+id/btn_monday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_saturday"
                app:layout_constraintTop_toTopOf="@+id/btn_monday" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="시간설정화면"
                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="00:00 ~ 02:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_monday" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="02:00 ~ 04:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch1" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="04:00 ~ 06:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch2" />

            <Switch
                android:id="@+id/switch4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="06:00 ~ 08:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch3" />

            <Switch
                android:id="@+id/switch5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="08:00 ~ 10:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch4" />

            <Switch
                android:id="@+id/switch6"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="10:00 ~ 12:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch5" />

            <Switch
                android:id="@+id/switch7"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="12:00 ~ 14:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch6" />

            <Switch
                android:id="@+id/switch8"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="14:00 ~ 16:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch7" />

            <Switch
                android:id="@+id/switch9"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="16:00 ~ 18:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch8" />

            <Switch
                android:id="@+id/switch10"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="18:00 ~ 20:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch9" />

            <Switch
                android:id="@+id/switch11"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="20:00 ~ 22:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch10" />

            <Switch
                android:id="@+id/switch12"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#CFCCCC"
                android:paddingLeft="20dp"
                android:switchMinWidth="80dp"
                android:text="22:00 ~ 00:00"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch11" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>